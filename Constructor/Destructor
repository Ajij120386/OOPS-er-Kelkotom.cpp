#include<iostream>
using namespace std;
//A destructor is a type of function which is called when the object is destroyed.

// Destructor never takes an argument nor does it return any value
int count=0;

class num{
    public:
        num(){
            count++;
            cout<<"constructor is called for object number"<<count<<endl;
        }

        ~num(){
            cout<<" destructor is called for object number"<<count<<endl;
            count--;
        }
};
int main(){

    num n1;
    {

        num n2, n3;

    }

    return 0;
}
